rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{userId}/{images=**} {
        allow read:   if   request.auth != null;
        // Only allow 1Mo images
        allow write:  if   (request.auth.uid==userId)  &&  request.resource.size < 1 * 1024 * 1024  &&  request.resource.contentType.matches('image/.*');
    }
  }
}